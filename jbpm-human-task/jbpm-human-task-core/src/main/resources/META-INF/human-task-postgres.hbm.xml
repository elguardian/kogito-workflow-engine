<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.jbpm.task">

    <!-- access="field" for fields that have no setter methods -->
    <class name="I18NText" table="I18NText">

        <id name="id" type="long" column="id">
            <generator class="native" />
        </id>

        <property name="language" access="field" />

        <property name="text" type="org.hibernate.type.TextType"
                  column="text" access="field" length="65535" />

    </class>

</hibernate-mapping>