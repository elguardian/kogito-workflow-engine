<?xml version="1.0" encoding="UTF-8"?>
<schema 
  targetNamespace="http://www.jboss.org/drools"
  elementFormDefault="qualified" 
  xmlns="http://www.w3.org/2001/XMLSchema"
  xmlns:drools="http://www.jboss.org/drools"
  xmlns:tns="http://www.omg.org/spec/BPMN/20100524/MODEL">
  
  <import namespace="http://www.omg.org/spec/BPMN/20100524/MODEL" schemaLocation="bpmn2emfscriptmodel.xsd"/>

  <attribute name="packageName">
    <simpleType>
      <restriction base="string" />
    </simpleType>
  </attribute>

  <attribute name="version">
    <simpleType>
      <restriction base="string"/>
    </simpleType>
  </attribute>

  <attribute name="ruleFlowGroup">
    <simpleType>
      <restriction base="string" />
    </simpleType>
  </attribute>
  
  <attribute name="taskName">
    <simpleType>
      <restriction base="string" />
    </simpleType>
  </attribute>
  
  <attribute name="priority">
    <simpleType>
      <restriction base="integer" >
        <minInclusive value="1"/>
      </restriction>
    </simpleType>
  </attribute>
  
  <attributeGroup name="onxscriptattributes">
    <attribute name="scriptFormat" type="string" use="required" />
  </attributeGroup>

  <attributeGroup name="importattributes">
    <attribute name="name" type="string" use="required"/>
  </attributeGroup>
  
  <attributeGroup name="globalattributes">
    <attribute name="identifier" type="string" use="required"/>
    <attribute name="type" type="string" use="required"/>
  </attributeGroup>

  <element name="onEntry-script">
    <complexType>
      <sequence>
      	<element ref="tns:script" minOccurs="1" maxOccurs="1"/>
      </sequence>
      <attributeGroup ref="drools:onxscriptattributes" />
    </complexType>
  </element>

  <element name="onExit-script">
    <complexType>
      <sequence>
      	<element ref="tns:script" minOccurs="1" maxOccurs="1"/>
      </sequence>
      <attributeGroup ref="drools:onxscriptattributes" />
    </complexType>
  </element>
  
  <element name="import">
    <complexType>
      <attributeGroup ref="drools:importattributes" />   
    </complexType>
  </element>
  
  <element name="global">
    <complexType>
      <attributeGroup ref="drools:globalattributes" />   
    </complexType>
  </element>
  
</schema>